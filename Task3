<body>
    <div class="converter-container">
        <h1>Temperature Converter</h1>
        
        <div class="input-group">
            <label for="temperature">Enter Temperature:</label>
            <input type="number" id="temperature" placeholder="e.g. 32" step="0.01">
            <div id="error-message" class="error">Please enter a valid number</div>
        </div>
        
        <div class="conversion-types">
            <div class="input-group">
                <label for="from-unit">Convert From:</label>
                <select id="from-unit">
                    <option value="celsius">Celsius (°C)</option>
                    <option value="fahrenheit">Fahrenheit (°F)</option>
                    <option value="kelvin">Kelvin (K)</option>
                </select>
            </div>
            
            <div class="input-group">
                <label for="to-unit">Convert To:</label>
                <select id="to-unit">
                    <option value="fahrenheit">Fahrenheit (°F)</option>
                    <option value="celsius">Celsius (°C)</option>
                    <option value="kelvin">Kelvin (K)</option>
                </select>
            </div>
        </div>
        
        <button id="convert-btn">Convert</button>
        
        <div id="result" class="result">
            Converted Temperature: <span id="converted-temp"></span> <span id="converted-unit"></span>
        </div>
    </div>

    <script>
        document.getElementById('convert-btn').addEventListener('click', function() {
            const temperatureInput = document.getElementById('temperature');
            const errorMessage = document.getElementById('error-message');
            const resultDiv = document.getElementById('result');
            const convertedTempSpan = document.getElementById('converted-temp');
            const convertedUnitSpan = document.getElementById('converted-unit');
            
            // Validate input
            if (temperatureInput.value === '' || isNaN(temperatureInput.value)) {
                errorMessage.style.display = 'block';
                resultDiv.style.display = 'none';
                return;
            } else {
                errorMessage.style.display = 'none';
            }
            
            const temperature = parseFloat(temperatureInput.value);
            const fromUnit = document.getElementById('from-unit').value;
            const toUnit = document.getElementById('to-unit').value;
            
            // Convert temperature
            let convertedTemp;
            let unitSymbol;
            
            if (fromUnit === toUnit) {
                convertedTemp = temperature;
            } else {
                // First convert to Celsius if needed
                let celsius;
                if (fromUnit === 'celsius') {
                    celsius = temperature;
                } else if (fromUnit === 'fahrenheit') {
                    celsius = (temperature - 32) * 5/9;
                } else if (fromUnit === 'kelvin') {
                    celsius = temperature - 273.15;
                }
                
                // Then convert from Celsius to target unit
                if (toUnit === 'celsius') {
                    convertedTemp = celsius;
                } else if (toUnit === 'fahrenheit') {
                    convertedTemp = (celsius * 9/5) + 32;
                } else if (toUnit === 'kelvin') {
                    convertedTemp = celsius + 273.15;
                }
            }
            
            // Round to 2 decimal places
            convertedTemp = Math.round(convertedTemp * 100) / 100;
            
            // Set unit symbol
            if (toUnit === 'celsius') {
                unitSymbol = '°C';
            } else if (toUnit === 'fahrenheit') {
                unitSymbol = '°F';
            } else if (toUnit === 'kelvin') {
                unitSymbol = 'K';
            }
            
            // Display result
            convertedTempSpan.textContent = convertedTemp;
            convertedUnitSpan.textContent = unitSymbol;
            resultDiv.style.display = 'block';
        });
    </script>
</body>
